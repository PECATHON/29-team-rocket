generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String   @unique
  passwordHash String
  role         String   // CUSTOMER, RESTAURANT_OWNER, DELIVERY_PARTNER, ADMIN
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
